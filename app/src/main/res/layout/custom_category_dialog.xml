<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+Add Category"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/dialog_category_img_link"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/custom_buttton"
            android:hint="Enter Profile Image Link"
            android:textColor="@color/white"
            android:textColorHint="#D8FFFFFF"
            android:paddingLeft="10dp"
            android:layout_marginTop="50dp"/>

        <EditText

            android:id="@+id/dialog_categoryName"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/custom_buttton"
            android:hint="Enter Category Name"
            android:textColor="@color/white"
            android:textColorHint="#D8FFFFFF"
            android:paddingLeft="10dp"
            android:layout_marginTop="120dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="20dp"
            android:layout_marginTop="80dp">

            <Button
                android:id="@+id/dialog_btn_cancel"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textStyle="bold"
                android:textSize="17dp"
                android:background="@drawable/custom_buttton"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/dialog_btn_add"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textStyle="bold"
                android:textSize="17dp"
                android:background="@drawable/custom_buttton"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginLeft="50dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>