<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactUsPage">


        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:layout_constraintBottom_toTopOf="@id/sv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#0027FF">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="#0027FF"
                android:src="@drawable/white_back"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Contact Details"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

        <ScrollView
            android:id="@+id/sv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address:"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/adminaddress"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:hint="Enter Address"
                    android:paddingLeft="10dp"
                    android:maxLines="1"
                    android:drawableStart="@drawable/location"
                    android:drawablePadding="10dp"
                    android:layout_gravity="center"
                    android:textColorHint="#4A4949"
                    android:background="@drawable/dbsource"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mobile no.:"
                    android:layout_marginLeft="15dp"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/adminmobile"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/dbsource"
                    android:drawableStart="@drawable/phone"
                    android:drawablePadding="10dp"
                    android:hint="Enter Mobile no."
                    android:lines="1"
                    android:linksClickable="false"
                    android:paddingLeft="10dp"
                    android:textColorHint="#4A4949" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Whatsapp Business no.:"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/adminwhatapp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:hint="Enter Whatsapp Business no."
                    android:paddingLeft="10dp"
                    android:drawableStart="@drawable/whatsapp"
                    android:drawablePadding="10dp"
                    android:maxLines="1"
                    android:layout_gravity="center"
                    android:textColorHint="#4A4949"
                    android:background="@drawable/dbsource"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/adminemail"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:hint="Enter Email"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/email"
                    android:drawablePadding="10dp"
                    android:textColorHint="#4A4949"
                    android:maxLines="1"
                    android:background="@drawable/dbsource"
                    android:layout_marginTop="5dp"/>


                <Button
                    android:id="@+id/adminaddcontactbtn"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="Add Contact Details"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:background="#0027FF"/>


            </LinearLayout>

        </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>